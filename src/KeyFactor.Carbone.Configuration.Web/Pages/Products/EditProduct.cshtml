@page
@using KeyFactor.Carbone.Configuration.Localization
@using Microsoft.Extensions.Localization
@model KeyFactor.Carbone.Configuration.Web.Pages.Configuration.Products.EditProductModel
@inject IStringLocalizer<ConfigurationResource> L
@{
    Layout = "_Layout";

}
@section scripts
{
    <script type="text/javascript" src="~/Pages/Products/EditProduct.js"></script>
}
<form method="post" id="form">
    <input type="hidden" asp-for="@Model.Id" />
    @await Html.PartialAsync("_Product", Model.Product);
    <abp-button button-type="Primary" type="submit">Save</abp-button>
</form>
