@page
@using KeyFactor.Carbone.Configuration.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization
@using KeyFactor.Carbone.Configuration.Permissions;
@model KeyFactor.Carbone.Configuration.Web.Pages.Products.IndexModel
@inject IStringLocalizer<ConfigurationResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <script type="text/javascript" src="~/Pages/Products/Index.js"></script>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Products"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @if (await AuthorizationService.IsGrantedAsync(ConfigurationPermissions.Products.Create))
                {
                    <abp-button id="NewProductButton"
                                text="@L["NewProduct"].Value"
                                icon="plus"
                                button-type="Primary"
                                onclick="window.location.href='/Products/CreateProduct'" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ProductsTable"></abp-table>
    </abp-card-body>
</abp-card>