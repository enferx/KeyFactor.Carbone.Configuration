@page
@using KeyFactor.Carbone.Configuration.Localization
@using Microsoft.Extensions.Localization
@model KeyFactor.Carbone.Configuration.Web.Pages.Products.CreateProductModel
@inject IStringLocalizer<ConfigurationResource> L
@{
    Layout = "_Layout";
}
@section Scripts
{
    <script type="text/javascript" src="~/Pages/Products/FormProduct.js"></script>
}

<form method="post" id="mainForm">
    <abp-card-body>
        <abp-row>
            <abp-column size-md="_12">
                <abp-tabs>
                    <abp-tab title="Details">
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.Name" />
                            </abp-column>
                            <abp-column>
                                <abp-input asp-for="@Model.Input.Number" />
                            </abp-column>
                        </abp-row>
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.ValidFromDate" />
                                <abp-input asp-for="@Model.ValidFromDateHidden" />
                            </abp-column>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.ValidToDate" />
                                <abp-input asp-for="@Model.ValidToDateHidden" />
                            </abp-column>
                        </abp-row>
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.DecimalPlaces" />
                            </abp-column>
                            <abp-column size-md="_6">
                                <div class="form-group">
                                    <label>@L["ProductUnitName"].Value</label>
                                    <select id="Input_UnitId_Select" name="Input_UnitId_Select" class="form-control"></select>
                                    @Html.ValidationMessageFor(x => x.Input.UnitId,"", new { @class = "text-danger" })
                                </div>
                                <abp-input asp-for="@Model.Input.UnitId" type="hidden"></abp-input>
                            </abp-column>
                        </abp-row>
                        <abp-row>
                            <abp-column size-md="_12">
                                <div class="form-group">
                                    <label>@L["ProductDescription"].Value</label>
                                    <textarea asp-for="@Model.Input.Description" class="form-control" rows="4"></textarea>
                                </div>
                            </abp-column>
                        </abp-row>
                    </abp-tab>
                    <abp-tab title="Field Service">
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-card>
                                    <abp-card-header>
                                        General
                                    </abp-card-header>
                                    <abp-card-body>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-select asp-for="@Model.Input.FieldServiceProductType" />
                                            </abp-column>
                                        </abp-row>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.ConvertToCustomerAsset" />
                                            </abp-column>
                                        </abp-row>
                                    </abp-card-body>
                                </abp-card>
                            </abp-column>
                            <abp-column size-md="_6">
                                <abp-card>
                                    <abp-card-header>Accounting</abp-card-header>
                                    <abp-card-body>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.Taxable" />
                                            </abp-column>
                                        </abp-row>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.CurrentCost" />
                                            </abp-column>
                                        </abp-row>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.StandardCost" />
                                            </abp-column>
                                        </abp-row>
                                    </abp-card-body>
                                </abp-card>
                            </abp-column>
                        </abp-row>
                    </abp-tab>  
                </abp-tabs>
            </abp-column>
        </abp-row>
    </abp-card-body>
</form>