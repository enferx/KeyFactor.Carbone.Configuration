@page
@using KeyFactor.Carbone.Configuration.Localization
@using Microsoft.Extensions.Localization
@model KeyFactor.Carbone.Configuration.Web.Pages.Products.CreateProductModel
@inject IStringLocalizer<ConfigurationResource> L
@{
    Layout = "_Layout";
}
@section Scripts
{
    <script type="text/javascript" src="~/Pages/Products/FormProduct.js"></script>
}

<form method="post" id="mainForm">
    <abp-card-body>
        <abp-row>
            <abp-column size-md="_12">
                <abp-tabs>
                    <abp-tab title="Details">
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.Name" label="@L["Product:Name"]" />
                            </abp-column>
                            <abp-column>
                                <abp-input asp-for="@Model.Input.Number" label="@L["Product:Number"]"  />
                            </abp-column>
                        </abp-row>
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.ValidFromDate" label="@L["Product:ValidFromDate"]" />
                                <abp-input asp-for="@Model.ValidFromDateHidden" />
                            </abp-column>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.ValidToDate" label="@L["Product:ValidToDate"]" />
                                <abp-input asp-for="@Model.ValidToDateHidden" />
                            </abp-column>
                        </abp-row>
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-input asp-for="@Model.Input.DecimalPlaces" label="@L["Product:DecimalPlaces"]" />
                            </abp-column>
                            <abp-column size-md="_6">
                                <div class="form-group">
                                    <label>@L["Product:UnitName"].Value</label>
                                    <select id="Input_UnitId_Select" name="Input_UnitId_Select" class="form-control"></select>
                                    <abp-input asp-for="@Model.Input.UnitId" type="hidden"></abp-input>
                                </div>
                               
                            </abp-column>
                        </abp-row>
                        <abp-row>
                            <abp-column size-md="_12">
                                <div class="form-group">
                                    <label>@L["Product:Description"].Value</label>
                                    <textarea asp-for="@Model.Input.Description" class="form-control" rows="4"></textarea>
                                </div>
                            </abp-column>
                        </abp-row>
                    </abp-tab>
                    <abp-tab title="Field Service">
                        <abp-row>
                            <abp-column size-md="_6">
                                <abp-card>
                                    <abp-card-header>
                                        General
                                    </abp-card-header>
                                    <abp-card-body>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-select asp-for="@Model.Input.FieldServiceProductType" label="@L["Product:FieldServiceProductType"]" />
                                            </abp-column>
                                        </abp-row>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.ConvertToCustomerAsset"  label="@L["Product:ConvertToCustomerAsset"]" />
                                            </abp-column>
                                        </abp-row>
                                    </abp-card-body>
                                </abp-card>
                            </abp-column>
                            <abp-column size-md="_6">
                                <abp-card>
                                    <abp-card-header>Accounting</abp-card-header>
                                    <abp-card-body>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.Taxable" label="@L["Product:Taxable"]" />
                                            </abp-column>
                                        </abp-row>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.CurrentCost" label="@L["Product:CurrentCost"]" />
                                            </abp-column>
                                        </abp-row>
                                        <abp-row>
                                            <abp-column size-md="_12">
                                                <abp-input asp-for="@Model.Input.StandardCost" label="@L["Product:StandardCost"]" />
                                            </abp-column>
                                        </abp-row>
                                    </abp-card-body>
                                </abp-card>
                            </abp-column>
                        </abp-row>
                    </abp-tab>
                </abp-tabs>
            </abp-column>
        </abp-row>
    </abp-card-body>
</form>